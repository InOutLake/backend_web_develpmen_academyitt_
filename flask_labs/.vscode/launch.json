    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug lab9",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "lab9\\app.py",
                "FLASK_DEBUG": "1",
                "VIRTUAL_ENV": "${workspaceFolder}/flask_venv"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        {
